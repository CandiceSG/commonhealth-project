<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
      <div class="border">

        <%= bootstrap_form_for(@post) do |f| %>
        <div class="form-group">
          <%= label_tag(:content) %>
          <%= text_area_tag(:content, nil, class: "form-control") %>
        </div>

        <div class='form-group'>
          Privacy :
          <div class="privacy">
            <%= select_tag :privacy, options_for_select(["Public", "Mes amis"]) %>
          </div>
        </div>
        <div class="actions text-center" id="submit-button">
            <%= f.submit "Publier ce post", class: 'btn btn-default' %>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>