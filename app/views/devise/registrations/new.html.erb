<div class="container">
  <div class="row sign-up-form">
    <div class="col-xs-6 col-xs-offset-3">
      <h1 class="text-center">Sign Up</h1>
        <br>
        <br>

        <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

            <%= f.text_field :first_name, autofocus: true, label: "Votre prÃ©nom ou Pseudo" %>

            <%= f.email_field :email, autofocus: true, label: "Votre email" %>

            <%= f.password_field :password, autocomplete: "off", label: "Mot de passe" %>

            <%= f.password_field :password_confirmation, autocomplete: "off",  label: "Confirmation de mot de passe" %>

            <%= f.submit "Save your profile" %>
          <br>
          <br>
          <br>
            <% end %>

          <%= render "devise/shared/links" %>

    </div>
  </div>
</div>